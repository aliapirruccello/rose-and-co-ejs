<%- include('partials/header') -%>
<body>
  <div class="client-card-post">
  <div class="card-section">
<div class="card w-96 bg-base-100 shadow-xl">
  <div class="card-body">
        <div class="col-6">
          <h2 class="badge badge-outline">Client Name</h2>
          <h2>     <%= post.clientName %></h2>
        </div>
      <div class="col-3 mt-5">
        <p class="badge badge-outline">Formula</p>
        <p><%= post.formula %></p>
      </div>
      <div class="col-3 mt-5">
        <h2 class="badge badge-outline">Haircut Notes</h2>
        <p><%= post.haircutNotes %></p>
      </div>
      

      
    <figure>
      <div class="mb-3">
        <a href="/post/<%= post._id%>">
        <img class="img-fluid" src="<%= post.image%>">
      </a>
      </div>
    </figure>

    <h2 class="badge badge-outline">Updated Formulas</h2>
    <ul>
      <% for(var i=0; i<comments.length; i++) {%>
        <li class="col-6 justify-content-between mt-5">
          <!--Add user attribution-->
          <span><strong>Stylist <%= comments[i].createdBy%>:</strong> <%= comments[i].comment%> <br><strong><%= comments[i].createdAt.toDateString() %></strong>
        </li>
      <% } %>
    </ul>

    <div class="col-3 mt-5">
      <h2 class="badge badge-outline">Spark Notes</h2>
      <br>
      <p><%= post.sparkNotes %></p>
    </div>
  <br>
    <div class="card-actions justify-between">
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= post.likes %></h3>
        <%if(post.user == user.id){ %>
        
        <%}%>
        </div>

        <%if(post.user == user.id){ %>
          <form
            action="/post/deletePost/<%= post.id %>?_method=DELETE"
            method="POST"
            class="col-3"
          >
            <button class="btn btn-error fa fa-trash" type="submit"></button>
          </form>
          <%}%>
        
      </div>
    
  


    <div class="mt-5">
      <!-- <h2>New Formula</h2> -->
      <form action="/comment/createComment/<%=post._id%>" method="POST">
        <div class="mb-3">
            <label for="formula" class="form-label"></label>
            <input type="text" class="form-control input input-bordered input-primary w-full max-w-xs" id="comment" name="comment" placeholder="Add New Formula Here">
        </div>
      </div>
        
        <button type="submit" class="btn btn-primary submit">Submit</button>
      </form>
    </div>
  
  </div>
</div>
</div>
<div class="flex flex-col w-full border-opacity-50 clientcard">
  
 
</div>
</body>

<%- include('partials/footer') -%>

