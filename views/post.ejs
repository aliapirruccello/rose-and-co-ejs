<%- include('partials/header') -%>
<div class="card w-96 bg-base-100 shadow-xl">
  <div class="card-body">
        <div class="col-6">
          <h2 class="card-title">Client Name</h2>
          <h2><%= post.clientName %></h2>
        </div>
      <div class="col-3 mt-5">
        <h2>Client Formula</h2>
        <p><%= post.formula %></p>
      </div>
      <div class="col-3 mt-5">
        <h3>Client Haircut Notes</h3>
        <p><%= post.haircutNotes %></p>
      </div>
      
        <h1>Updated Formulas</h1>
        <ul>
          <% for(var i=0; i<comments.length; i++) {%>
            <li class="col-6 justify-content-between mt-5">
              <!--Add user attribution-->
              <span>Stylist <%= comments[i].createdBy%>: <%= comments[i].comment%> <br> <%= comments[i].createdAt.toDateString() %>
              <!--If comment was created by current user, then show delete button-->
              <br> <%if(comments[i].createdById == user.id){ %>
                    <form
                      action="/comment/deleteComment/<%=post._id%>/<%= comments[i]._id %>?_method=DELETE"
                      method="POST"
                      >
                      <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </form>
                    <%}%>
            </li>
          <% } %>
        </ul>
      
    <figure>
      <div class="mb-3">
        <a href="/post/<%= post._id%>">
        <img class="img-fluid" src="<%= post.image%>">
      </a>
      </div>
    </figure>
    <div class="col-3 mt-5">
      <h3>Spark Notes</h3>
      <p><%= post.sparkNotes %></p>
    </div>
    <div class="card-actions justify-between">
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= post.likes %></h3>
        <%if(post.user == user.id){ %>
        
        <%}%>
        </div>
    <!-- </div>
    <div class="card-actions justify-end"> -->
    <!-- <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form> -->

        <%if(post.user == user.id){ %>
          <form
            action="/post/deletePost/<%= post.id %>?_method=DELETE"
            method="POST"
            class="col-3"
          >
            <button class="btn btn-primary fa fa-trash" type="submit"></button>
          </form>
          <%}%>
        
      </div>
  


    <div class="mt-5">
      <!-- <h2>New Formula</h2> -->
      <form action="/comment/createComment/<%=post._id%>" method="POST">
        <div class="mb-3">
            <label for="formula" class="form-label"></label>
            <input type="text" class="form-control input input-bordered input-error w-full max-w-xs" id="comment" name="comment" placeholder="New Formula">
        </div>
      </div>
    
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    
